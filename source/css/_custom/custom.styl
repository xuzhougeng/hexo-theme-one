// Custom styles.



body{
	background: #333333 url('/images/background.jpg') no-repeat center fixed;
}

#header {
	background: #f0f0f0;
}


#content, #comments {
	background: rgba(255, 255, 255, 0.76);
	padding: 2em;
	border-radius: 1em;
}

@media print {
	#header, #comments, #footer, .highlight figcaption a {
		display: none;
	}
}

.theme-next #ds-thread #ds-reset .ds-replybox {
	border: 1px solid #efefef;
	background: #ffffff;
}

.tag-cloud .tag-cloud-tags a:hover {
	color: #000;
}

/*留言板*/

blockquote.leave-message {
	font-size: 20px;
}

#messages {
	width: 100%;
}

#messages #gh-comments {
	width: 100%;
	margin: 0;
	padding: 0;
}

.leave-message.blockquote-center {
    position: relative;
    top: 20px;
}

#gh-comments-info{
    border-bottom: 1px solid #ffffff; 
}

#gh-comments-info a {
	border-bottom: 0;
    background: #f6f8fa;
    color: #60676d;
	border-radius: 2px;
	padding: 5px;
}

#gh-comments-info a:hover {
    background: #e6e8ea;
    color: #40474d;
	text-decoration: none;
}

#gh-comments-info a span#gh-comments-count {
    color: #44f;
}

#gh-comments {
    position: relative;
    top: 20px;
    min-height: 800px;
    width: 900px;
}

#gh-comments .gh-single-comment {
    border-bottom: 1px solid #edf1f2;
    padding-bottom: 15px;
}

#gh-comments .commentgravatar {
    width: 40px;
    height: 40px;
    margin-top: 15px;
    border-radius: 20px;
    overflow: hidden;
    float: left;
}

#gh-comments .commentgravatar img {
    width: 40px;
    height: 40px;
}

#gh-comments .commentheader {
    margin-left: 60px;
    line-height: 40px;
}

#gh-comments .commentuser {
    border: none;
    color: #555;
    font-weight: 600;
    font-size: 17px;
}

#gh-comments .commentdate {
    border: none;
    color: #65696c;
    font-size: 12px;
    float: right;
}

#gh-comments .commentdate:hover {
    color: #55595c;
}

#gh-comments .commentbody {
    margin-left: 60px;
}

